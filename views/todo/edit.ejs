<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>To Do Liste</title>
    <link href="/stylesheets/fontawesome-all.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/task.css">
    
</head>
<body>
<% include ../partials/navbarTop %>
<h1>To-Do Liste Bearbeiten</h1>
<hr>
  <div class="row">
    <div class="col-3">
      <div class="task">
       <form action="/todo/<%= todo._id %>/edit?_method=PUT" method="post">
            <input type="text" class="newProject" name="todo[project]" value="<%= todo.project %>">
            <hr>
            Beschreibung:
            <textarea class="newTask" name="todo[description]" rows="3" cols="25"><%= todo.description %></textarea>
            Ergebnis:
            <textarea class="newTask" name="todo[result]"  rows="3" cols="25"><%= todo.result %></textarea>>
            <hr>
            Termin:
            <input type="text" class="date" name="task[deadline]" placeholder="fÃ¤llig am">
            <p><input type="submit" ></p>
        </form>
      </div>
    </div>
    <div class="col-6">
      <div class="taskEdit">
          <h3>Aufgaben-Bereich</h3>
          <hr>
          <ul class="addedTasksm">
            <% for(var i = 0;i < tasks.length; i++){ %>
              
              <li class="taskList" id="li<%= tasks[i]._id %>" >
                
                  <% if (tasks[i].status == "open"){ %>
                   <input type="checkbox" class="form-check-input" id="ck<%= tasks[i]._id %> " > 
                  <% }else{ %>
                  <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
                  <% } %> 
                  <%= tasks[i].task %>
                <span class="iconRight" data-value="<%= tasks[i]._id %>"><i class="fas fa-trash"></i></span>
              </li>
              
            <% } %>
          </ul>
          <input type="text" id="taskName" name="task" placeholder="Neue Aufgabe">
      </div>
    </div>
    <div class="col-3">    
      <div class="task">
        <form action="/todo" method="post">
          <h3>Info</hr>
          <hr>
          
          <p class="date">erstellt am:
            <%= todo.created.getDate() %>.
            <%= todo.created.getMonth() %>.
            <%= todo.created.getYear() +1900 %>
          </p>
          <p class="date">Anzahl der Aufgaben gesamt:</p>
          <p class="date">bereits erledigte Aufgaben:</p>
        </form>
      </div>
    </div>
    
  </div>
<a href="/todo">Start</a>
<div class="footer">Trademark 2018 Groefics</div>
<script src="/javascript/jQuery_3_2_1.js"></script>
<script src="/javascript/task.js"></script>
<script src="/javascript/bootstrap.js"></script>
</body>
</html>
