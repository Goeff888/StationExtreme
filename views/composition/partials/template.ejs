<h2>Vorlagen</h2>
<div class="gallery">
 
 <% for (var i = 0;   i < composition.templates.length; i++){ %>
  <img src="/images/compositions/<%= composition._id %>/templates/<%= composition.templates[i].image %>" class="galleryThumb">
  <% if (i >= 4){ %>
   <a href="">...</a>
  <% i = composition.templates.length;
   } %>
 <% } %>
 <button type="button" class="btn btn-secondary add" data-toggle="modal" data-target="#templateModal">
  <i class="fa fa-plus"></i>
</button>
</div>


<!-- Modal zum hinzufÃ¼gen eines neuen Template-Eintrags-->
<div class="modal fade" id="templateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Neue Vorlage</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form method="post" action="/composition/<%= composition._id %>/edit?_method=PUT" encType="multipart/form-data">
      <div class="modal-body">
        Beschreibung:
        <textarea rows="4" cols="50" name="templateDescription"></textarea>
        <input type="file" name="templateFile" accept="image/*">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
      </form>
    </div>
  </div>
</div>