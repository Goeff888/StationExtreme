 </ul>
  <button type="button" class="btn btn-secondary add" data-toggle="modal" data-target="#blogNew">
  <i class="fa fa-plus"></i>
</button>
</div>
<div class="modal fade" id="blogNew" tabindex="-1" role="dialog" aria-labelledby="addPicModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    <form method="post" action="/blog" encType="multipart/form-data">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <input type="text" name="name" placeholder="Blogtitel">
          <input class="d-none" type="text" name="area" placeholder="3D-Visualisierung">
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  
      <div class="modal-body">
        <textarea rows="4" cols="50" name="description" placeholder="Beschreibung"></textarea>
         <div class="form-group">
          <select class="form-control category" name="category"exampleFormControlSelect1">
            <option>Modelling</option>
            <option>Texturing</option>
            <option>BodyPaint</option>
            <option>Animation</option>
            <option>Rendering</option>
            <option>Lighting</option>
          </select>
       </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
     </form>
    </div>
  </div>
</div>

